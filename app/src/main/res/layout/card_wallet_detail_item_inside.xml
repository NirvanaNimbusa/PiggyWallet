<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_view_wallet_detail_inside_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars[0]" />

        <TextView
            android:id="@+id/text_view_wallet_detail_inside_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/demo"
            app:layout_constraintBottom_toTopOf="@+id/text_view_wallet_detail_inside_subtitle"
            app:layout_constraintStart_toEndOf="@+id/image_view_wallet_detail_inside_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_wallet_detail_inside_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/demo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_view_wallet_detail_inside_icon"
            app:layout_constraintTop_toBottomOf="@+id/text_view_wallet_detail_inside_title" />

        <TextView
            android:id="@+id/text_view_wallet_detail_inside_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_16"
            android:text="@string/demo"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_wallet_detail_inside_subtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_view_wallet_detail_inside_title" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
